<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>
      
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      
        <%= label_tag :password %>
        <%= password_field_tag :password %>
  
        <table style="width: 100%;">
        <tr>
          <td style="width: 2%; padding-bottom: 10px;">
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          </td>
          <td style="width: 28%; padding-top: 5px; padding-left: 5px;">
          <%= label_tag :remember_me %>
          </td>
          <td style="width: 70%;  text-align: right;">
           <a href="#">forgotten password? (placeholder)</a>
           <%# TODO = link_to "forgotten password?", new_password_reset_path %>
          </td>
        </tr>
        </table>

        <!-- TODO should render a captcha -->
        
        <%= submit_tag "Sign in", class: "btn btn-large btn-primary"  %>
      
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_tag sessions_path do %>
      
        <%= label_tag :email %>
        <%= text_field_tag :email, params[:email] %>
      
        <%= label_tag :password %>
        <%= password_field_tag :password %>
  
        <table style="width: 100%;">
        <tr>
          <td style="width: 50%;">
            <%= label_tag :remember_me , class: "checkbox inline" do %>
              <%= check_box_tag :remember_me, 1, params[:remember_me] %>
              <span>remember me on this computer</span>
            <% end %>
          </td>
          <td style="width: 50%; text-align: right; padding-top: 7px;">
            <%= link_to "forgotten password", new_password_reset_path %>
          </td>
        </tr>
        </table>

        <!-- TODO should render a captcha -->
        <br>
        
        <%= submit_tag "Sign in", class: "btn btn-large btn-primary", style: "width:100%;"  %>
      
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>